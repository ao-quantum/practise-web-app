<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <header class="header">
        <%- include('../partials/header.ejs') %>
    </header>
    <div class="main-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-4 login-form">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="usernameField">Username</label>
                    <input class="form-control" type="text" name="username" placeholder="Username" id="usernameField"><br />
                </div>
                <div class="form-group">
                    <label for="passwordField">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password" id="passwordField"><br />
                </div>
                
                <input type="submit" class="btn btn-primary" value="Login">
            </form>
            <p><a href="/register">Register</a></p>
            <% if (data.error) { %>
            <div class="error">
                <%= data.error.message %>
            </div>
            <% } %>
        </div>
            </div>
        </div>
        
    </div>
</body>

</html>